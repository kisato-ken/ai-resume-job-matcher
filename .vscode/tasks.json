{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup Backend",
			"type": "shell",
			"command": "python",
			"args": ["-m", "venv", "venv"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"detail": "Create Python virtual environment for backend"
		},
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "venv\\Scripts\\pip",
			"args": ["install", "-r", "requirements.txt"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"detail": "Install Python dependencies"
		},
		{
			"label": "Download spaCy Model",
			"type": "shell",
			"command": "venv\\Scripts\\python",
			"args": ["-m", "spacy", "download", "en_core_web_sm"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"detail": "Download required spaCy language model"
		},
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "venv\\Scripts\\uvicorn.exe",
			"args": ["app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"detail": "Start FastAPI backend server on port 8000"
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"detail": "Install Node.js dependencies"
		},
		{
			"label": "Start Frontend Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"detail": "Start Next.js frontend server on port 3000"
		},
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"detail": "Build frontend for production"
		},
		{
			"label": "Lint Frontend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "lint"],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "test",
			"detail": "Run ESLint on frontend code"
		}
	]
}